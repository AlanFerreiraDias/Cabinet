.wrapper_with_padding
    #document_show
        %h1.title= @doc.title
        %p= simple_format(@doc.content)

        .buttons
            = link_to "Fix Document", edit_document_path(@doc), class: "button"
            = link_to "Trash It", document_path(@doc), method: :delete, data: { confirm: "Are you sure?" }, class: "button"
